{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Backend (FastAPI)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": ["-m", "uvicorn", "main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            }
        },
        {
            "name": "Run Sample Data Generation",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/generate_sample_data.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Train ML Models",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/train_models.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
